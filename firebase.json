{
  "functions": {
    "source": "functions"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "source": "firebase-basic",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "europe-west1"
    },
    "rewrites": [
      { "source": "**", "function": "nextApp" }
    ]
  },
  "emulators": {
    "auth":      { "port": 9099 },
    "database":  { "host": "127.0.0.1", "port": 9000 },
    "functions": { "port": 5001 },
    "hosting":   { "port": 5000 },
    "ui":        { "enabled": true, "port": 4000 }
  }
}
