{
  "compilerOptions": {

    "module": "commonjs",
    "moduleResolution": "node",


    "target": "es2019",


    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
